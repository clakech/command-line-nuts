[user]
	name = Real Name
	email = myemail@somedomain.com
[core]
    editor = vim
[merge]
	tool = opendiff
	mergeoptions = --ff-only
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[github]
	user = mygithubusername
[alias]
	co = checkout
	undo = reset --hard
	cb = checkout -b
	br = branch
	cp = cherry-pick
	tree = log --graph --oneline --all --decorate    
	ri = rebase -i
	rim = rebase -i master
	re = rebase
	ru = rebase upstream/master
	fu = fetch upstream
[branch]
	autosetuprebase = always
[push]
	default = simple
